 */
    Layout = null;
}
@using System.Collections;
@{ 
    int usertype = (int)(((Hashtable)Session["login_user"])["UserType"]);
}

<div class="user_nav_collapse visible-xs-block">
    <div class="user_nav_collapse_container">
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-th-list"></span>
            </button>
            <ul class="dropdown-menu">
                <li class="userNavProfile">
                    <a href="/User/MyProfile">Profile</a>
                </li>
                <!--<li class="userNavInbox">
                    <a href="/User/Inbox">Inbox</a>
                </li>-->
                @if (usertype == 1)
                {
                    <li class="userNavListings">
                        <a href="/User/Listings">My Listings</a>
                    </li>
                    <li class="userNavBookings">
                        <a href="/User/Bookings">Bookings Received</a>
                    </li>
                }
                @if (usertype == 2)
                {
                    <li class="userNavBookings">
                        <a href="/User/Bookings">My Bookings</a>
                    </li>
                    <!--<li class="userNavWishLists">
                        <a href="/User/WishLists">Wish Lists</a>
                    </li>-->
                }
                <li>
                    <a href="javascript:onLogout();">Log Out</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="user_nav hidden-xs">
    <ul class="user_nav_container">
        <li class="userNavProfile">
            <a href="/User/MyProfile">Profile</a>
        </li>
        <!--<li class="userNavInbox">
            <a href="/User/Inbox">Inbox</a>
        </li>-->
        @if (usertype == 1)
        {
            <li class="userNavListings">
                <a href="/User/Listings">My Listings</a>
            </li>
            <li class="userNavBookings">
                <a href="/User/Bookings">Bookings Received</a>
            </li>
        }
        @if (usertype == 2)
        {
            <li class="userNavBookings">
                <a href="/User/Bookings">My Bookings</a>
            </li>
            <!--<li class="userNavWishLists">
                <a href="/User/WishLists">Wish Lists</a>
            </li>-->
        }
        <li>
            <a href="javascript:onLogout();">Log Out</a>
        </li>
    </ul>
</div>
